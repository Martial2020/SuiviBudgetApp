<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuiviBuget.Mobile.Views.BudgetDetailManageView"
             xmlns:viewModels="clr-namespace:SuiviBuget.Mobile.ViewModels;assembly=SuiviBuget.Mobile"
             Title="{Binding Title}">
    <!-- Liaison du ViewModel à la page -->
    <ContentPage.BindingContext>
        <viewModels:BudgetDetailManageViewModel />
    </ContentPage.BindingContext>
    <!--Liaison du ViewModel à la page-->
   
    <Grid RowDefinitions="Auto, *">
        <!-- Première ligne pour la barre de recherche -->
        <SearchBar  Placeholder="Rechercher d'une ligne..."  BackgroundColor="White"  Margin="10,20,10,0"
        FontSize="16" TextColor="Black" HorizontalOptions="FillAndExpand"  VerticalOptions="Start" HeightRequest="50" VerticalTextAlignment="Center"  Grid.Row="0" Text="{Binding SearchText, Mode=TwoWay}"/>

        <!-- Contenu -->
        <AbsoluteLayout Grid.Row="1">
            <!-- CollectionView -->
            <CollectionView ItemsSource="{Binding BudgetDetailsItems}"
              Margin="10,0,10,10"
              AbsoluteLayout.LayoutFlags="All"
              AbsoluteLayout.LayoutBounds="0,0,1,1">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                  StrokeThickness="1"
                  BackgroundColor="AliceBlue"
                  Margin="10"
                  Padding="6" >
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">

                                <!-- Infos Budget -->
                                <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="4">
                                    <Label Text="{Binding CodeLigneBudgetaire}" FontAttributes="Bold"/>
                                    <Label Text="{Binding LibelleLigneBudgetaire}"/>
                                    <Label Text="{Binding Montant, StringFormat='{0:N0} FCFA'}"/>
                                </VerticalStackLayout>

                                <!-- Bouton Actions modernisé (menu ⋮) -->
                                <Button Grid.Column="1" Grid.Row="0"
                          Text="⋮"
                          FontSize="20"
                          BackgroundColor="Transparent"
                          TextColor="#4682B4"
                          WidthRequest="40"
                          HeightRequest="40"
                          CornerRadius="20"
                          BorderColor="#4682B4"
                          BorderWidth="1"
                          Clicked="OnActionsClicked"
                          HorizontalOptions="End"
                          VerticalOptions="Center"/>

                                <!-- Dates -->
                                <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="15">
                                    <Label Text="{Binding DateDebutBudget, StringFormat='Du : {0:dd/MM/yyyy}'}" TextColor="Gray"/>
                                    <Label Text="{Binding DateFinBudget, StringFormat='Au : {0:dd/MM/yyyy}'}" TextColor="Gray"/>
                                </HorizontalStackLayout>

                                <!-- Montants -->
                                <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="15">
                                    <Label Text="{Binding MontantBudget, StringFormat='Mnt : {0:N0} FCFA'}" TextColor="#32CD32"/>
                                    <Label Text="{Binding MontantConsomme, StringFormat='Cons : {0:N0} FCFA'}" TextColor="#FF6347"/>
                                    <Label Text="{Binding MontantRestant, StringFormat='Rest : {0:N0} FCFA'}" TextColor="Blue"/>
                                </HorizontalStackLayout>

                                <!-- Statut -->
                                <HorizontalStackLayout Grid.Row="3" Grid.ColumnSpan="2" Spacing="15">
                                    <Label Text="{Binding StatutBudget}" FontAttributes="Italic" TextColor="Red"/>
                                </HorizontalStackLayout>

                            </Grid>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

   
            <!-- Bouton "+" flottant -->
            <Button Text="+"
                  BackgroundColor="#FF7F50"
                  TextColor="White"
                  FontSize="30"
                  WidthRequest="60" HeightRequest="60"
                  CornerRadius="30"
                  AbsoluteLayout.LayoutFlags="PositionProportional"
                  AbsoluteLayout.LayoutBounds="0.9,0.9,60,60"
                  ZIndex="5"
                  Command="{Binding AddBudgetDetailCommand}" CommandParameter="{Binding CodeBudget}"/>
            <!-- Loader -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                 IsVisible="{Binding IsBusy}"
                 Color="DodgerBlue"
                 WidthRequest="50"
                 HeightRequest="50"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,50,50"/>
        </AbsoluteLayout>
    </Grid>
</ContentPage>